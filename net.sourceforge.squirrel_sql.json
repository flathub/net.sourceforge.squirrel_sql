{
  "app-id" : "net.sourceforge.squirrel_sql",
  "runtime" : "org.freedesktop.Platform",
  "runtime-version" : "21.08",
  "sdk" : "org.freedesktop.Sdk",
  "sdk-extensions" : ["org.freedesktop.Sdk.Extension.openjdk17"],
  "command": "squirrel-sql",
  "finish-args" : [
    "--share=ipc",
    "--socket=x11",
    "--share=network"
  ],
  "modules" : [
    {
      "name" : "openjdk",
      "buildsystem" : "simple",
      "build-commands" : [ "/usr/lib/sdk/openjdk17/install.sh" ]
    },
    {
      "name" : "jdbc-drivers",
      "buildsystem" : "simple",
      "build-commands" : [
        "mkdir -p /app/jdbc-drivers",
        "cp * /app/jdbc-drivers/"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://repo1.maven.org/maven2/org/mariadb/jdbc/mariadb-java-client/2.7.4/mariadb-java-client-2.7.4.jar",
          "sha256": "f06577b19e89b33028b96cd4f031248e761de7ebc712f4ef535e268df76edb2a"
        },
        {
          "type": "file",
          "url": "https://repo1.maven.org/maven2/org/xerial/sqlite-jdbc/3.36.0.3/sqlite-jdbc-3.36.0.3.jar",
          "sha256": "af3a3376391e186a0fed63ecd414b72a882bf452667b490a0be3abf85b637d3f"
        },
        {
          "type": "file",
          "url": "https://repo1.maven.org/maven2/org/postgresql/postgresql/42.2.24/postgresql-42.2.24.jar",
          "sha256": "83ff945bb4f5dac8ea31b7bd5324433f5593dbbcb58b63763232bbef186d4772"
        },
        {
          "type": "file",
          "url": "https://repo1.maven.org/maven2/mysql/mysql-connector-java/8.0.26/mysql-connector-java-8.0.26.jar",
          "sha256": "3e1dddd5fdbcd78a552a8fc915fcb804e4f7f83a873355972a3c97a22556f62c"
        }
      ]
    },
    {
      "name": "squirrelsql",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/squirrelsql",
        "cp -r * /app/squirrelsql",
        "install -Dm644 icons/acorn.png /app/share/icons/hicolor/512x512/apps/net.sourceforge.squirrel_sql.png"
      ],
      "sources": [{
        "type": "archive",
        "url": "https://downloads.sourceforge.net/project/squirrel-sql/1-stable/4.3.0-plainzip/squirrelsql-4.3.0-standard.zip",
        "dest-filename": "squirrelsql-standard.zip",
        "sha256": "5e1e892df934c43a840498841b758128112a69dfced03f1a789939b39c3c3d32"
      }]
    },
    {
      "name": "squirrelsql-startup",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 squirrel-sql /app/bin/squirrel-sql",
        "install -Dm644 net.sourceforge.squirrel_sql.metainfo.xml /app/share/metainfo/net.sourceforge.squirrel_sql.metainfo.xml",
        "install -Dm644 net.sourceforge.squirrel_sql.desktop /app/share/applications/net.sourceforge.squirrel_sql.desktop"
      ],
      "sources": [
        {
          "type": "file",
          "path": "squirrel-sql"
        },
        {
          "type": "file",
          "path": "net.sourceforge.squirrel_sql.metainfo.xml"
        },
        {
          "type": "file",
          "path": "net.sourceforge.squirrel_sql.desktop"
        }
      ]
    }
  ]
}
